---
import Navbar from "../components/Navbar.astro";
import { Image } from "astro:assets";
const HeroSectionImage = 'https://placehold.co/1920x740';
const PreviewProductImage = 'https://placehold.co/50x50';
import axios from 'axios';
const response = await axios.get('http://localhost:2008/barang');
const product = response.data;
---

<Navbar/>
<section id="home-page">
    <div id="img">
        <Image src={HeroSectionImage} alt="Template Image 1" width={1920} height={740} />
    </div>
    <div id="list-product" class="grid grid-cols-4 mt-8 p-5">
        {product.map(barang => (
            <div id="viral-product" class="w-76 p-2 border-2 rounded-md hover:scale-95 transition-all border-gray-300 flex">
                <Image src={barang.image_url} class={'rounded-md'} alt="Template Image 2" width={100} height={100} />
                <div class="flex flex-col">
                    <p class="ml-2 text-1xl font-bold">{barang.nama}</p>
                    <h1 class="ml-2">{barang.harga} $</h1>
                    <p class="ml-2 text-sm">stok tersedia : {barang.stok}</p>
                    <a href="" class="underline ml-2 text-sm mt-2">View all</a>
                </div>
            </div>
        ))}
    </div>
</section>